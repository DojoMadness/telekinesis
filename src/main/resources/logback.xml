<configuration>
	<appender name="stdout" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%-30(%d{HH:mm:ss.SSS} [%thread]) %-5level %logger{32} - %msg%n</pattern>
		</encoder>
	</appender>

	<logger name="telekinesis.connection.codec" level="info" />
	<logger name="telekinesis.connection" level="info" />

	<root level="info">
		<appender-ref ref="stdout" />
	</root>
	
</configuration>



